<div class="container-fluid">
  <div class="grid">
    <% @legends.each do |legend| %>
      <div style="background-color:#E3DFD6;" class="card g-col-4 border border-5 border-dark">
        <img src="<%= legend.img%>" alt="<%= legend.name%> " class="img-fluid">
        <div class="card-body">
           <h3 class="card-text text-center "><%= link_to legend.name, legend, :class => "text-decoration-none"%></h3>
        </div>
      </div>
    <% end %>
  </div>
  <div class="justify-content-center text-center mt-3 mb-3">
    <%= page_entries_info @legends %>
  </div>
    <%= paginate @legends, window: 2 %>
</div>


